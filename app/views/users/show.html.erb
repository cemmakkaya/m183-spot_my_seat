<div class="flex flex-col pt-56 items-center">
  <div class="p-14 shadow-2xl rounded-3xl">
    <h1 class="text-xl font-bold mb-4">
      <%= @user.username %>
    </h1>
    <h2 class="font-bold">Email</h2>
    <p class="mb-4"><%= @user.email %></p>
    <div>
      <%= link_to 'Edit', edit_user_path(@user), class: "bg-red-400 py-2 px-4 rounded-lg transition-all shadow-md hover:shadow-none flex justify-center mb-4" %>
    </div>
    <div class="underline hover:no-underline transition-all">
      <%= link_to 'Back', root_path %>
    </div>
  </div>
</div>