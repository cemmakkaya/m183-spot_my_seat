<div class="flex flex-col pt-56 items-center">
  <div class="p-14 shadow-2xl rounded-3xl">
    <h2 class="text-xl font-bold mb-4">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="actions bg-red-400 py-2 px-4 rounded-lg transition-all shadow-md hover:shadow-none flex justify-center mb-4">
        <%= f.submit "Send me reset instructions" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>