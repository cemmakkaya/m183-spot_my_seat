<div class="flex flex-col pt-14 items-center">
  <div class="p-14 shadow-2xl rounded-3xl">
    <h1 class="text-xl font-bold mb-4"><%= @post.title%></h1>
    <h2 class="text-md font-semibold mb-4"><%= @post.content%></h2>
    <% if current_user == @post.user || (current_user && current_user.admin?) %>
      <%= link_to 'Edit', edit_post_path(@post), class: "bg-green-400 text-white rounded-lg p-2 transition-all shadow-lg hover:shadow-none mr-4" %>
      <%= link_to 'Delete', @post, data: {"turbo-method": :delete}, class: "bg-red-400 text-white rounded-lg p-2 transition-all shadow-lg hover:shadow-none" %>
    <% end %>
    <div class="mt-4">
      <%= link_to 'Back', posts_path, class: "underline hover:no-underline" %>
    </div>
  </div>
</div>