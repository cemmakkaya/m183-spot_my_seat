<h1 class="text-4xl font-bold mb-4">Blog Posts</h1>
<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path, class: "bg-blue-500 text-white p-2 rounded" %>
<% end %>
<div class="mt-6">
  <% @posts.each do |post| %>
    <div class="border-b py-4">
      <h2 class="text-2xl font-bold"><%= link_to post.title, post_path(post) %></h2>
      <p class="text-gray-600">by <%= post.user.username %> on <%= post.created_at.strftime("%B %d, %Y") %></p>
      <p><%= truncate(post.content, length: 200) %></p>
    </div>
  <% end %>
</div>
