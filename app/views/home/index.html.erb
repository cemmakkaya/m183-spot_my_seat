<header class="p-10 rounded-xl">
  <% if user_signed_in? %>
    <div class="flex justify-between">
      <h2 class="text-4xl font-bold">Welcome back, <%= current_user.username %>!</h2>
      <div class="flex rounded-lg gap-1">
        <%= link_to 'My Profile', user_path(current_user), class: "p-2 rounded-l-lg rounded-r-sm bg-white transition-all hover:bg-red-200 shadow-xl hover:shadow-none" %>
        <% if current_user.admin? %>
          <%= link_to 'Manage Users', users_path, class: "p-2 hover:bg-red-200 rounded-sm bg-white transition-all shadow-xl hover:shadow-none" %>
        <% end %>
        <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "p-2 rounded-l-sm rounded-r-lg hover:bg-red-200 bg-white transition-all shadow-xl hover:shadow-none" %>
      </div>
    </div>
  <% else %>
    <div class="flex justify-between">
      <h2 class="text-4xl font-bold">Welcome to the site!</h2>
      <div class="flex rounded-lg gap-1">
        <div class="p-2 rounded-l-lg transition-all bg-white hover:bg-red-200 shadow-xl hover:shadow-none">
          <%= link_to 'Sign up', new_user_registration_path %>
        </div>
        <div class="p-2 rounded-r-lg hover:bg-red-200 bg-white transition-all shadow-xl hover:shadow-none">
          <%= link_to 'Login', new_user_session_path %>
        </div>
      </div>
    </div>
  <% end %>
</header>
<main class="ml-10 mt-10 flex">
  <div class="flex flex-col gap-2 w-full">
    <h2 class="text-3xl font-bold">Dashboard</h2>
    <div class="flex h-96 mr-10 gap-5">
      <%= link_to 'Pick new Seat', new_seat_path, class: "flex-1 p-5 bg-red-400 rounded-xl text-center" %>
      <%= link_to 'My Seat History', seats_path, class: "flex-1 p-5 bg-red-400 rounded-xl text-center" %>
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <%= link_to 'Global Seat History', admin_seats_path, class: "flex-1 p-5 bg-red-400 rounded-xl" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="w-1/3">
    <h2 class="text-3xl mb-4 font-bold">Blog</h2>
    <div class="rounded-xl">
      <% @posts = Post.order(created_at: :desc).limit(3) %>
      <% @posts.each do |post| %>
        <div class="border-b border-gray-300 py-2">
          <p class="text-xs"><%= post.user.username %> at <%= post.created_at.strftime("%d. %B, %Y") %></p>
          <h3 class="text-lg font-bold"><%= link_to post.title, post_path(post), class: "hover:underline" %></h3>
          <p><%= truncate(post.content, length: 100) %></p>
        </div>
      <% end %>
      <%= link_to 'View all posts', posts_path, class: "mt-4 text-white underline" %>
    </div>
  </div>
</main>